//Leia 2 valores com uma casa decimal (x e y), que devem representar as coordenadas
//de um ponto em um plano. A seguir, determine qual o quadrante ao qual pertence o
//ponto, ou se estÃ¡ sobre um dos eixos cartesianos ou na origem

import java.util.Locale;
import java.util.Scanner;

public class cartesiano {
	
	public static void main (String[]args) {
		
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		float cx, cy;
		
		System.out.print("Informe a coordenada X: ");
		cx = sc.nextFloat();
		System.out.print("Informe a coordenada y: ");
		cy = sc.nextFloat();
		
		
		if (cx>0 && cy>0) {
			System.out.print("Quadrante 1.");
		}
		else if (cx>0 && cy<0) {
			System.out.print("Quadrante 4.");
		}
		else if (cx>0 && cy==0) {
			System.out.print("Eixo x.");
		}
		else if (cx==0 && cy>0) {
			System.out.print("Eixo y.");
		}
		else if (cx<0 && cy>0) {
			System.out.print("Quadrante 2.");
		}
		else if (cx<0 && cy<0) {
			System.out.print("Quadrantre 3");
		}
		else {
			System.out.print("Origem.");
		}
		
		sc.close();
	}

}
